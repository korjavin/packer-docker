{
    "variables": {
        "hostname": "docker1",
        "domain":   "mydomain",
        "puppet_master":   "puppet"
    },


    "builders": [{
            "type": "docker",
            "image": "debian",
            "commit": true,
            "pull" : true
        }],


    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "apt-get -y update",
                "apt-get install -y puppet"
            ]
        },
        {
            "type": "puppet-server",
            "options": "--test --pluginsync",
            "puppet_server": "{{user `puppet_master`}}",
            "prevent_sudo": true,
            "options": "--fqdn={{user `hostname`}}.{{user `domain`}} --waitforcert=10 --verbose",
            "facter": {
                "server_role": "dev_server"
            }
        }
    ]

}
